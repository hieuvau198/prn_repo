@model PRN222.ProductStore.Service.DTOs.ProductDto

<h2>Delete Product</h2>

@if (TempData["Message"] != null){
    <div class="alert alert-danger">
        @TempData["Message"]
    </div>
}

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <dl class="row">
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">Units In Stock</dt>
        <dd class="col-sm-10">@Model.UnitsInStock</dd>

        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@Model.UnitPrice</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

<a asp-action="Index">Back to List</a>
