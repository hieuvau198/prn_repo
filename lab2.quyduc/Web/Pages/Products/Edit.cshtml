@page "{id:int}"
@model Web.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />

    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input asp-for="Product.ProductName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="Product.CategoryId" asp-items="Model.Categories" class="form-control"></select>
    </div>

    <div class="mb-3">
        <label class="form-label">Units In Stock</label>
        <input asp-for="Product.UnitsInStock" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label class="form-label">Unit Price</label>
        <input asp-for="Product.UnitPrice" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
